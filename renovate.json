{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>aquaproj/aqua-renovate-config#2.8.0",
        "config:best-practices"
    ],
    "packageRules": [
        {
            "groupName": "aqua devDependencies",
            "matchFileNames": [
                "aqua.yml",
                "aqua.yaml"
            ],
            "automerge": true,
            "matchPackageNames": [
                "!hashicorp/terraform"
            ]
        },
        {
            "groupName": "aws-sdk-go-v2",
            "matchPackageNames": [
                "github.com/aws/aws-sdk-go-v2{/,}**"
            ]
        },
        {
            "automerge": true,
            "matchPackageNames": [
                "/^aquaproj/*/",
                "/^actions/*/",
                "/^aws-actions/*/",
                "/^google-github-actions/*/",
                "/^terraform-linters/*/"
            ]
        }
    ]
}
